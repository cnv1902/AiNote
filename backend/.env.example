APP_ENV="AI NOTE"
API_PREFIX=/api
HOST=127.0.0.1
PORT=8000

DATABASE_URL=

JWT_SECRET=change_this_to_a_long_random_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=30
REFRESH_TOKEN_EXPIRES_DAYS=14

FTS_CONFIG=simple

SUPABASE_URL=
SUPABASE_ANON_KEY=

S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT_URL=
S3_BUCKET_NAME=AiNote
S3_REGION=ap-south-1

# LLM API Configuration
# API_EXTRACT_NAME: Tên provider cho OCR (để trống = LOCAL/Ollama, hoặc: GPT, GEMINI, GROCK, DEEPSEEK, CLAUDE)
API_EXTRACT_NAME=
API_EXTRACT_TEXT=http://localhost:11434
MODEL_EXTRACT_TEXT=qwen2.5vl:3b

# API_CHAT_NAME: Tên provider cho Chat/Q&A (để trống = LOCAL/Ollama, hoặc: GPT, GEMINI, GROCK, DEEPSEEK, CLAUDE)
API_CHAT_NAME=
API_CHAT=http://localhost:11434
MODEL_CHAT=llama3.1:8b

# API_EXTRACT_EMBEDDING: Tên provider cho Embedding/RAG (để trống = NER, hoặc: GPT, GEMINI)
# Lưu ý: Ưu tiên NER cho văn bản ngắn (<500 ký tự), fallback sang API cho văn bản dài
API_EXTRACT_EMBEDDING=
MODEL_EXTRACT_EMBEDDING=text-embedding-3-small

# API Keys cho các providers (chỉ cần điền khi sử dụng provider tương ứng)
OPENAI_API_KEY=
GEMINI_API_KEY=
GROCK_API_KEY=
DEEPSEEK_API_KEY=
ANTHROPIC_API_KEY=